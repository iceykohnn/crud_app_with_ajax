<div class="container">
  <h1>Sign Up</h1>

  <div id="errors"><%= erb :_model_errors, :layout => false, :locals => { :model => @user } %></div>

  <form id="sign-up" method="post" action="/users">
    <label class="label" for="first name">First Name</label>
    <input type="text" name="user[first_name]" placeholder="e.g., isaac" value="<%= @user.first_name %>">
    <span id="name-errors" class="errors"></span>
    <br>

    <label class="label" for="last name">Last Name</label>
    <input type="text" name="user[last_name]" placeholder="e.g., bishop" value="<%= @user.last_name %>">
    <span id="name-errors" class="errors"></span>
    <br>

    <label class="label" for="email">Email</label>
    <input type="email" name="user[email]" placeholder="e.g., me@gmail.com" value="<%= @user.email %>">
    <span id="email-errors" class="errors"></span>
    <br>

    <label class="label" for="birthdate">Birthdate</label>
    <input type="text" name="user[birthdate]" placeholder="e.g., 04/12/014" value="<%= @user.birthdate %>">
    <span id="name-errors" class="errors"></span>
    <br>

    <label class="label" for="password">Password</label>
    <input type="password" name="user[password]" placeholder="8 or more characters">
    <span id="entered_password-errors" class="errors"></span>    
    <br>

    <div class="submit"><input type="submit" value="Sign Up!"></div>
  </form>

</div>